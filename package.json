{
  "name": "simple-app-deployment",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "preview": "tsup && pulumi preview",
    "refresh": "tsup && pulumi refresh --yes",
    "deploy": "tsup && pulumi up --yes",
    "destroy": "tsup && pulumi destroy --yes"
  },
  "devDependencies": {
    "@types/node": "^18",
    "tsup": "^8.0.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@pulumi/aws": "^6.0.0",
    "@pulumi/awsx": "^2.0.2",
    "@pulumi/pulumi": "^3.113.0"
  }
}
